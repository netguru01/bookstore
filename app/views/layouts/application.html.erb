<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title ? @page_title : "Welcome" %> | Netguru's Bookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav" >
            <li class="<%= params[:controller] == 'books' ? 'active' : '' %>"><%= link_to "Home", root_path %></li>
            <li class="<%= params[:controller] == 'about' ? 'active' : '' %>"><%= link_to "About Us", about_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Book",  new_book_path %></li>
            <li><%= link_to "Category",  new_category_path %></li>
            <li><%= link_to "Author",  new_author_path %></li>
            <li><%= link_to "Publisher",  new_publisher_path %></li>
        </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header>
      <div class="container">
        <h1>Netguru's Bookstore <small><%= @page_title ? @page_title : "Welcome" %></small></h1>
      </div>
    </header>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <% if flash[:notice] %>
            <div class="alert alert-success">
              <%= flash[:notice] %>
            </div>
            <% end %>


            <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
            <% end %>


            <%= yield %>
          </div>
          <div class="col-md-4">
             <%= render 'partials/sidebar' %>
          </div>
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <p>
          &copy;Copyright 20016. Creative Design by <a href="https://designsbynetguru.com" target="_blank"><em>Yinka Ash a.k.a Netguru</em></a>
        </p>

      </div>
    </footer>
  </body>
</html>
